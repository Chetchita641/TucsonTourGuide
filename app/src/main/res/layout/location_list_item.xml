<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/location_item_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        tools:src="@drawable/red_garter" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        tools:background="@color/category_restaurants">

        <TextView
            android:id="@+id/location_item_name_text_view"
            style="@style/LocationItem"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            tools:text="Red Garter" />

        <TextView
            android:id="@+id/location_item_short_text_view"
            style="@style/LocationItem"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            tools:text="Burgers and Beer" />
    </LinearLayout>

</LinearLayout>